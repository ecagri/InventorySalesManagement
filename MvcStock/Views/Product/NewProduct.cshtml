@using MvcStock.Models.Entity
@model List<Tbl_Category>
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="ProductName" required maxlength="50"/>
    </div>
    <div>
        <label>Product Brand</label>
        <input type="text" class="form-control" name="ProductBrand" required maxlength="50"/>
    </div>
    <div>
        <label>Product Category</label>
        <select class="form-control" name="ProductCategory">
            @foreach (var category in Model)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>
    <div>
        <label>Product Price</label>
        <input type="text" class="form-control" name="ProductPrice" required />
    </div>
    <div>
        <label>Product Stock</label>
        <input type="number" class="form-control" name="ProductStock" required />
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info">Add Product</button>
    </div>
</form>

