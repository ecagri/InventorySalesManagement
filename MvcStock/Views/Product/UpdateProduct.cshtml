@using MvcStock.Models.Entity
@model Tbl_Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" />
    </div>
    <div>
        <label>Product Brand</label>
        <input type="text" class="form-control" name="ProductBrand" value="@Model.ProductBrand" />
    </div>
    <div>
        <label>Product Category</label>
        <select class="form-control" name="ProductCategory" >
            @foreach (var category in (List<Tbl_Category>) ViewBag.Categories)
            {
                <option value="@category.CategoryId" selected="@(category.CategoryId == Model.ProductCategory)">@category.CategoryName</option>
            }
        </select>
    </div>
    <div>
        <label>Product Price</label>
        <input type="text" class="form-control" name="ProductPrice" value="@Model.ProductPrice"/>
    </div>
    <div>
        <label>Product Stock</label>
        <input type="number" class="form-control" name="ProductStock" value="@Model.ProductStock"/>
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info">Update Product</button>
    </div>
</form>

